<div class="collection_header_slider" id="coll_{{section.id}}">
  <div class="section">
    <div class="clhd_slider">
      {% for block in section.blocks %}
        {% assign collection = collections[block.settings.collection] %}
      
         <div class="clhd_item">
           {% comment %}
           <a class="clhd_url" href="{{ collection.url}}" aria-label="{% if block.settings.tex != blank %}
             	  {{ block.settings.text}} 
             {% else %}
             	  {{ collection.title}} 
             {% endif %}"></a>
         {% endcomment %}
           
           <div class="clhd_img">
             {% if block.settings.video != blank %}
                  <video class="video_box_height" autoplay loop muted playsinline>
                      <source src="{{ block.settings.video}}" type="video/mp4" />
                  </video>
             
            {% elsif block.settings.image != blank %}
             <img src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.image.alt }}"/>
            {% else %}
              <img src="{{ collection.image | img_url: 'master' }}" alt="{{ collection.image.alt }}"/>
            {% endif %}
           </div>
         
           <div class="clhd_txt">
             <a class="clhd_url_txt" href="{{ collection.url}}" aria-label="{% if block.settings.tex != blank %}
             	  {{ block.settings.text}} 
             {% else %}
             	  {{ collection.title}} 
             {% endif %}"></a>
             {% if block.settings.tex != blank %}
             	<h3> {{ block.settings.text}}</h3>
             {% else %}
             	<h3> {{ collection.title}}</h3>
             {% endif %}
             {% if block.settings.button_label != blank %}
             <a href="{{ collection.url}}" class="clhsd_btn button button--secondary">{{ block.settings.button_label}}</a>
             {% endif %}
           </div> 
         </div>
      
      {% endfor %}
    </div>
  </div>
</div>
     
<style>
  #coll_{{section.id}} .clhd_txt h3{
    color:{{ section.settings.font_color}};
    font-size:{{ section.settings.heading_font}}px;
    font-family: {{ section.settings.font.family }}, {{ section.settings.font.fallback_families }};
  }
  #coll_{{section.id}} .clhsd_btn{
    color:{{ section.settings.btn_color}};
    background-color:{{ section.settings.btn_bg }};
    border-color: {{ section.settings.btn_border_color }};
    font-family: {{ section.settings.font.family }}, {{ section.settings.font.fallback_families }};
  }
  #coll_{{section.id}} .clhsd_btn:hover{
    color:{{ section.settings.hv_font_color}};
    background-color:{{ section.settings.hv_btn_bg }};
    border-color: {{ section.settings.hv_btn_border_color }};
  }
  
</style>

{% schema %}
  {
    "name": "Collection list slider",
    "settings": [ 
      {
          "type": "header",
          "content": "style"		
      },
      {
          "type": "color",
          "id": "font_color",
          "label": "font color"
      },
      {
          "type": "color",
          "id": "btn_color",
          "label": "button color"
      },
      {
          "type": "color",
          "id": "btn_bg",
          "label": "button background"
      },
      {
          "type": "color",
          "id": "btn_border_color",
          "label": "button border color"
      },
	  {
		"type": "header",
		"content": "hover"
	  },
      {
          "type": "color",
          "id": "hr_btn_color",
          "label": "hover button color"
      },
      {
          "type": "color",
          "id": "hr_btn_bg",
          "label": "hover button background"
      },
      {
          "type": "color",
          "id": "hr_btn_border_color",
          "label": "hover button border color"
      },
      {
          "type": "font_picker",
          "id": "font",
          "label": "font",
          "default": "open_sans_n4"
      },
      {
          "type": "range",
          "id": "heading_font",
          "label": "heading font",
          "min": 10,
          "max": 90,
          "default": 30
      }
	],
	"blocks":[
	 {
		"type": "item",
		"name": "item",
		"settings":[
		 {
			"type": "collection",
			"id": "collection",
			"label": "collection"
		 },
		 {
			"type": "image_picker",
			"id": "image",
			"label": "image"
		 },
		 {
			"type": "text",
			"id": "heading",
			"label": "heading"
		 },
         {
            "type": "text",
            "id": "button_label",
            "label": "Button label",
            "default": "View Shop"
          },
          {
              "type": "text",
              "id": "video",
              "label": "video_url"
          }
		]
	 }
	],
	"presets":[
	 {
		"name": "collection header slider"
	 }
	]
  }
{% endschema %}

 
