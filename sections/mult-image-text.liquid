<div class="mult-image-text">
  <div class="mlmgtxt_flx
              {% if section.settings.position == 'left' %}
              flx_revers
              {% endif %}
              ">
    <div class="mlmgtxt_box mlmgtxt_left" style="width:{{ 100| minus: section.settings.width_img  }}%;">
      
      <div class="mlmgtxt_left_flx">           
      {% for block in section.blocks %}
      	<div class="mlmgtxt_item box_size_{{ section.blocks.size}}"
             style="width:{{ block.settings.width_img}}%">
          
          <div class="mlmgtxtleft_img"
               style="height: {{ block.settings.height}}%;"
               >
            
            {% if block.settings.image != blank %}
            
            <img src="{{ block.settings.image | img_url: 'master'}}" alt="{{ block.settings.image.alt }}"/>
            {% endif %}
            
          </div>
          
          {% if block.settings.description != blank %}
           <div tabindex="0" class="mlmgtxtleft_description">
             {{ block.settings.description }}
           </div>          
          {% endif %}
          
          <div class="mlmgtxt_btn_outer"
               style="text-align:{{ block.settings.position}}"
               >
            
          {% if block.settings.btn_txt !=blank %}
          <a class="mlmgtxt_btn mlmgtxt_btn_{{ block.id}}" 
             href="{{ block.settings.btn_url}}">{{ block.settings.btn_txt}}</a>
          {% endif %}
          </div>
          
      	</div>  
        
        <style>
          .mlmgtxt_btn_outer .mlmgtxt_btn_{{ block.id}}{
            color:{{ block.settings.color}};
            background-color:{{ block.settings.bg_color}};
          }
          .mlmgtxt_btn_outer .mlmgtxt_btn_{{ block.id}}:hover{
             color:{{ block.settings.hr_color}};
            background-color:{{ block.settings.hr_bg_color}};
          }
        </style>
      {% endfor %}
      </div>
      
    </div>
    
    <div class="mlmgtxt_box mlmgtxt_right"
         style="width:{{ section.settings.width_img}}%;"
         >
      
            {% if section.settings.video != blank %}
               <video autoplay="autoplay" autoplay loop muted> 
                    <source src="{{ section.settings.video}}"
                            type="video/mp4"> 
                </video> 
      {% elsif section.settings.right_image != blank %}
      	<img src="{{ section.settings.right_image | img_url: '720x' }}" alt="{{ section.settings.right_image.alt }}"/>
      {% endif %}      
    </div>
    
  </div>
  
</div>

{% schema %}
  {
    "name": "mult image text",
    "settings": [
	 {
		"type": "image_picker",
		"id": "right_image",
		"label": "rigth image"
	 },
		 {
			"type": "text",
			"id": "video",
			"label": "video"
		 },
	 {
	 	"type": "range",
		"id": "width_img",
		"label": "image width",
		"max": 100,
		"min": 10,
		"default": 50,
		"unit": "%"
	 },
	 {
		"type": "select",
		"id": "position",
		"label": "position",
		"options": [{"value": "right", "label": "right"},
					{"value": "left", "label": "left"}]
	 }
	],
	"blocks":[
	 {
		"type": "item_image",
		"name": "item image",
		"limit": 2,
		"settings":[
		 {
			"type": "image_picker",
			"id": "image",
			"label": "image"
		 },
		 {
			"type": "richtext",
			"id": "description",
			"label": "description"
	 	 },
		 {
			"type": "text",
			"id": "btn_txt",
			"label": "button text"
	 	 },
		 {
			"type": "url",
			"id": "btn_url",
			"label": "button url"
	 	 },
         {
            "type": "range",
            "id": "width_img",
            "label": "image width",
            "max": 100,
            "min": 10,
            "default": 50,
			"unit": "%"
         },
         {
            "type": "range",
            "id": "height",
            "label": "image height",
            "max": 100,
            "min": 10,
            "default": 50,
			"unit": "%"
         },
	  	 {
			"type": "color",
			"id": "color",
			"label": "color",
		    "default": "#fff"
		 },
	  	 {
			"type": "color",
			"id": "bg_color",
			"label": "background color",
		    "default": "#000"
		 },
		 {
			"type": "header",
			"content": "hover"
		 },
	  	 {
			"type": "color",
			"id": "hr_color",
			"label": "cover color",
		    "default": "#fff"
		 },
	  	 {
			"type": "color",
			"id": "hr_bg_color",
			"label": "hover background color",
		    "default": "#000"
		 },
	  	 {
			"type": "select",
			"id": "position",
			"label": "position",
			"options":[{"value": "left", "label": "left"},
					   {"value": "center", "label": "center"},
					   {"value": "right", "label": "right"}]
		 }
		]
	 }
	],
	"presets":[
     {
	   "name": "mult image text"
	 }
	]
  }
{% endschema %}

 