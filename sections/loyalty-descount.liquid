<div class="loyalty_discount">
  <div class="section">
    <div class="lydt_header">
      {%  if section.settings.heading != block %}
        <h2>{{ section.settings.heading }}</h2>
      {%  endif %}
      {%  if section.settings.text != block %}
      <p>{{ section.settings.text }}</p>
      {%  endif %}
    </div>

     <div class="lydt_flx">
       {%  for block in section.blocks %}
       <div class="lydt_item">
         <a href="{{ block.settings.url }}">
           {%  if block.settings.image != blank %}
             <img src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.image.alt }}"/>
           {%  endif %}
         </a>
       </div>
       {%  endfor %}
     </div>
    
  </div>
</div>


{% schema %}
  {
    "name": "loyalty discount",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "heading"
      },
      {
        "type": "text",
        "id": "text",
        "label": "text"
      }
    ],
    "blocks":[
      {
        "type": "image",
        "name": "item",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "image"
          },
          {
            "type": "url",
            "id": "url",
            "label": "url"
          }
        ]
      }
    ],
    "presets":[
      {
        "name": "loyalty discount"
      }
    ]
  }
{% endschema %}

 