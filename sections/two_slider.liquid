<div class="home_two_img home_two_{{ section.id}}">
  
  <div class="hmtwmg_flx">
    <div class="hmtwmg_item">
      <div class="slider_slick">
      {% for block in section.blocks %} 
        {% if block.settings.item_position == 'left' %}
          <div class="slider_box">

            <div class="hmtwmg_item_inner possion_{{ block.settings.text_position}}"
                 style="background-color:{{ block.settings.bg_color}}"
                 >
              <div class="hmtwmg_img"
                     {% if block.settings.space  %}
                   style="padding:0;"
                   {% endif %}
                   >
                {% if block.settings.video != blank %}
                  <video class="video_box" autoplay loop muted playsinline>
                      <source src="{{ block.settings.video}}" type="video/mp4" />
                  </video>
                {% elsif block.settings.img != blank %}
                  <img src="{{ block.settings.img | img_url: '980x'}}" alt="{{ block.settings.img.alt }}"/>
                {% endif %}
              </div>

              <div class="hmtwmg_txt">
                {% if block.settings.heading != blank %}
                    <h2>{{ block.settings.heading }}</h2>
                {% endif %}
                {% if block.settings.btn_txt != blank %}
                <a class="hmtwmg_btn button button--primary " href="{{ block.settings.btn_txt}}">{{ block.settings.btn_txt}}</a>
                {% endif %}
              </div> 
            </div>    

          </div>
      	{% endif %}
      {% endfor %} 
      </div>
    </div>
    
     <div class="hmtwmg_item">
       <div class="slider_slick">
      {% for block in section.blocks %} 
        {% if block.settings.item_position == 'right' %}
          <div class="slider_box">

            <div class="hmtwmg_item_inner possion_{{ block.settings.text_position}}"
                 style="background-color:{{ block.settings.bg_color}}"
                 >
              <div class="hmtwmg_img"
                   {% if block.settings.space  %}
                   style="padding:0;"
                   {% endif %}
                   >
                {% if block.settings.video != blank %}
                  <video class="video_box" autoplay loop muted playsinline>
                      <source src="{{ block.settings.video}}" type="video/mp4" />
                  </video>
                {% elsif block.settings.img != blank %}
                  <img src="{{ block.settings.img | img_url: '980x'}}" alt="{{ block.settings.img.alt }}"/>
                {% endif %}
              </div>

              <div class="hmtwmg_txt">
                {% if block.settings.heading != blank %}
                    <h2>{{ block.settings.heading }}</h2>
                {% endif %}
                {% if block.settings.btn_txt != blank %}
                <a class="hmtwmg_btn button button--primary" href="{{ block.settings.btn_txt}}">{{ block.settings.btn_txt}}</a>
                {% endif %}
              </div> 
            </div>    

          </div>
      	{% endif %}
      {% endfor %} 
       </div>
    </div>
    
    
  </div>
  
</div>

<style>
  .home_two_{{ section.id}} .hmtwmg_txt h2{
    font-family: {{ section.settings.regular__font.family }}, {{ section.settings.regular__font.fallback_families }};
    font-size:{{ section.settings.heading_font}}px;
    line-height:{{ section.settings.heading_font | plus: 5}}px;
    color: {{ section.settings.heading_color}};
  }
   .home_two_{{ section.id}} .hmtwmg_flx .hmtwmg_item_inner .hmtwmg_txt .hmtwmg_btn{
     background-color:{{ section.settings.btn_bg}};
     color:{{ section.settings.btn_font}};
     border-color:{{ section.settings.btn_font}}:
   }
  .home_two_{{ section.id}} .hmtwmg_flx .hmtwmg_item_inner .hmtwmg_txt .hmtwmg_btn:hover{
     color:{{ section.settings.btn_bg}};
     background-color:{{ section.settings.btn_font}};
     border-color:{{ section.settings.btn_bg}}:
   }
</style>

{% schema %}
  {
    "name": "home two slider",
    "settings": [	 
      {
        "type": "font_picker",
        "id": "regular__font",
        "label": "heading Font",
        "default": "open_sans_n4"
      },
      {
        "type": "color",
        "id": "btn_bg",
        "label": "button background"
      },
      {
        "type": "color",
        "id": "btn_font",
        "label": "button font"
      },
      {
        "type": "color",
        "id": "heading_color",
        "label": "heding color"
      },
	  {
		"type": "range",
		"id": "heading_font",
		"label": "heading font",
		"min": 10,
		"max": 90,
		"default": 30
	  }
	],
	"blocks":[
	 {
		"type": "image",
		"name": "image",
		"settings":[
		 {
			"type": "select",
			"id": "item_position",
			"label": "item position",
			"options":[{"value": "left", "label": "left"},
					   {"value": "right", "label": "right"}]
		 },
		 {
			"type": "image_picker",
			"id": "img",
			"label": "image"
		 },
		 {
			"type": "text",
			"id": "video",
			"label": "video_url"
		 },
		 {
			"type": "color",
			"id": "bg_color",
			"label": "background color"
		 },
		 {
			"type": "text",
			"id": "heading",
			"label": "heading"
		 },
		 {
			"type": "text",
			"id": "btn_txt",
			"label": "button text"
		 },
		 {
			"type": "url",
			"id": "btn_url",
			"label": "button url"
		 },
		 {
			"type": "select",
			"id": "text_position",
			"label": "text position",
			"options":[{"value": "top", "label":"top"},
					   {"value": "bottom", "label":"bottom"}]
		 },
		 {
			"type": "checkbox",
			"id": "space",
			"label": "side space"
		 }
		]
	 }
	],
	"presets":[
	 {
		"name": "home two slider"
	 }
	]
  }
{% endschema %}

 