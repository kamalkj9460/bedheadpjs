<div class="section">
  <div class="returns_exchanges">
    
    <div class="retch_flx">
      <div class="retch_sidebar">
        <ul class="retch_nav">
          {% for block in section.blocks %}
         	 <li class="{% if forloop.first %} active{% endif %}" data-id="{{ block.settings.tab_item | handle }}">{{ block.settings.tab_item}}</li>
          {% endfor %}
        </ul>
      </div>
       <div class="retch_main">
         
         {% for block in section.blocks %}
         	 <div class="retch_item {% if forloop.first %} active{% endif %}" data-id="{{ block.settings.tab_item | handle }}">
                 
               	<div class="retch_item_box">
                  <h3>{{ block.settings.heading}}</h3>
                  <p>{{ block.settings.description }}</p>
                 </div>
               
         	 </div>
          {% endfor %}
         
      </div>
      
    </div>
    
  </div>
  
</div>

{% schema %}
  {
    "name": "returns exchanges",
    "settings": [],
	"blocks":[
	 {
		"type": "item",
		"name": "item",
		"settings": [
	  	 {
			"type": "text",
			"id": "tab_item",
			"label": "tab item"
	 	 },
		 {
			"type": "text",
			"id": "heading",
			"label": "heading"
		 },
		 {
			"type": "richtext",
			"id": "description",
			"label": "description"
		 }
		]	
	 }
	],
	"presets":[
	 {
		"name": "returns exchanges"
	 }
	]
  }
{% endschema %}

 
