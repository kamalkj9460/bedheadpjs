<div class="mult-image-text">
  <div class="mlmgtxt_flx">
    <div class="mlmgtxt_box mlmgtxt_left">
      
      <div class="mlmgtxt_left_flx">           
      {% for block in section.blocks %}
      	<div class="mlmgtxt_item box_size_{{ section.blocks.size}}">
          {% if block.settings.image != blank %}
          <div class="mlmgtxtleft_img"
               style="height: {{ block.settings.height}}%"
               >
            <img src="{{ block.settings.image | img_url: 'master'}}" alt="{{ block.settings.image.alt }}"/>
          </div>
          {% endif %}
          {% if block.settings.description != blank %}
           <div class="mlmgtxtleft_description">
             {{ block.settings.description }}
           </div>          
          {% endif %}
          
      	</div>      
      {% endfor %}
      </div>
      
    </div>
    
    <div class="mlmgtxt_box mlmgtxt_right">
      {% if section.settings.right_image != blank %}
      	<img src="{{ section.settings.right_image | img_url: '980x' }}" alt="{{ section.settings.right_image.alt }}"/>
      {% endif %}      
    </div>
    
  </div>
  
</div>

{% schema %}
  {
    "name": "left-right-image-text",
    "settings": [
	 {
		"type": "image_picker",
		"id": "right_image",
		"label": "rigth image"
	 }
	],
	"blocks":[
	 {
		"type": "item_image",
		"name": "item image",
		"limit": 2,
		"settings":[
		 {
			"type": "image_picker",
			"id": "image",
			"label": "image"
		 },
		 {
			"type": "richtext",
			"id": "description",
			"label": "description"
	 	 },
		 {
			"type": "text",
			"id": "btn_txt",
			"label": "button text"
	 	 },
		 {
			"type": "url",
			"id": "btn_url",
			"label": "button url"
	 	 },
         {
            "type": "range",
            "id": "height",
            "label": "image height",
            "max": 100,
            "min": 10,
            "default": 50,
			"unit": "%"
         }
		]
	 }
	],
	"presets":[
     {
	   "name": "left-right-image-text"
	 }
	]
  }
{% endschema %}

 